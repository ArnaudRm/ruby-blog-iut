<div class="row justify-content-around">
  <% @posts.each do |post| %>
    <div class="card col-sm-12 col-md-6 col-lg-4 mb-4 ">
      <%= image_tag post.picture.url(:thumb_post), alt: "post picture full-width" %>
      <div class="card-body">
        <h5 class="card-title">
          <%= post.title %>
        </h5>
        <p class="card-text">
          <%= post.chapeau %>
        </p>
        <p class="card-text post-content">
          <%= truncate(post.content, length: 250) {link_to " Lire la suite", post} %>
        </p>
        <%= link_to "Lire la suite", post, class: "btn btn-primary mb-3" %>
        <div class="card-footer bg-transparent border-primary">
          <p class="card-text">
            <small class="text-muted">
              <%= "PubliÃ© le #{post.created_at.strftime('%d/%m/%y')}" %>
            </small>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>