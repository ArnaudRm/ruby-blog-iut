<div class="row justify-content-around">
  <% @posts.each do |post| %>
      <div class="card col-sm-12 col-md-4 col-lg-3 mb-4 ml-1">
        <%= image_tag post.picture.url(:thumb_post), alt: "post picture full-width" %>
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to "#{post.title}", post%>
          </h5>
          <p class="card-text">
            <%= truncate(post.content, length: 250) {link_to " Lire la suite", post} %>
          </p>
          <div class="card-footer bg-transparent border-success">
            <p class="card-text">
              <small class="text-muted">
                <%= "PubliÃ© le #{post.created_at.strftime('%d/%m/%y')}" %>
              </small>
            </p>
          </div>
        </div>
      </div>
  <% end %>
</div>