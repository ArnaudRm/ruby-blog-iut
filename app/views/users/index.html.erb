<ul>
  <% @users.each do |user| %>
    <li>
      <% if user.avatar? %>
        <%= image_tag user.avatar.thumb.url, alt: "user_avatar" %>
      <% end %>

      <%= link_to "#{user}", user %>
      <%= link_to "Edit", [:edit,  user] %>
      <%= link_to "Supprimer", user, method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to "Nouvel Utilisateur", [:new, :user] %>

