<div class="col-md-12">

  <h1 class="page-header mb-4">
    <%= @user != current_user ? "Profil de #{@user}" : "Mon profil" %>
  </h1>

  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <div class="row">
        <% if @user.avatar %>
          <div class="col-sm-2">
            <%= image_tag @user.avatar.url(:thumb), alt: "user_avatar", class: "rounded-circle" %>
          </div>
        <% end %>
        <div class="col-sm-10">
          <h2 class="display-4">
            <%= @user %>
          </h2>
          <p class="lead">
            <i class="fa fa-envelope mr-4"></i>
            <%= @user.email %>
          </p>
          <p class="lead">
            <i class="fa fa-birthday-cake mr-4"></i>
            <%= @user.birthday %>
          </p>
        </div>
      </div>

    </div>
  </div>

  <h3 class="page-header mt-4 mb-3">
    <%= @user != current_user ? "Ses posts" : "Mes posts" %>
  </h3>

  <% if @posts.length > 0 %>
    <%= render "posts/renderPosts" %>
    <div class="digg_pagination">
      <%= will_paginate @posts, :container => false %>
    </div>
  <% else %>
    <p>Aucun article.</p>
  <% end %>
</div>